pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
        STACK_NAME = 'myapp-stack'
        GIT_REPO = 'https://github.com/edisaputroo/docker-container.git'
        IMAGE_NAME = 'nginx:latest'
    }

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'main', url: "${GIT_REPO}"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // If you need to build a custom Docker image
                    // docker.build("${IMAGE_NAME}")
                    echo "Using NGINX image, skipping custom build"
                }
            }
        }

        stage('Deploy to Docker Swarm') {
            steps {
                script {
                    // Deploying the stack using Docker Swarm
                    sh "docker stack deploy --compose-file ${DOCKER_COMPOSE_FILE} ${STACK_NAME}"
                }
            }
        }
    }

    post {
        always {
            script {
                // Tear down the stack after the pipeline
                sh "docker stack rm ${STACK_NAME}"
            }
            echo 'Pipeline completed!'
        }
    }
}
